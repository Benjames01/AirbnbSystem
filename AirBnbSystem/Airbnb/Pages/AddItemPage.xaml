<Page x:Class="AirBnbSystem.Airbnb.Pages.AddItemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AirBnbSystem"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddItemPage" Background="White">

    <Grid Margin="0">

        <Grid Margin="75, 50, 75, 100">
            <Label Content="Item Type:" HorizontalAlignment="right" VerticalAlignment="Top" RenderTransformOrigin="2.745,0.449" Margin="0,-4,585,0" />
            <ComboBox x:Name="itemTypeComboBox" HorizontalAlignment="Left" Margin="65,0,0,0" VerticalAlignment="Top" Width="193" SelectionChanged="ItemTypeComboBox_SelectionChanged" />
            <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="313" Margin="-10,27,0,-40" VerticalAlignment="Top" Width="660">
                <TabItem Header="DistrictItem" Visibility="Collapsed">
                    <Grid Background="White">
                        <Label Content="Name: " HorizontalAlignment="Left" Margin="199,10,0,0" VerticalAlignment="Top" />
                        <TextBox x:Name="itemNameTxt" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Margin="247,10,0,0" BorderBrush="#FF554F4F" Background="White" BorderThickness="0,0,0,1" />
                        <Label x:Name="districtLbl" Content="District: " HorizontalAlignment="Left" Margin="199,41,0,0" VerticalAlignment="Top" Width="48" />
                        <ComboBox x:Name="districtComboBox" HorizontalAlignment="Left" Margin="252,41,0,0" VerticalAlignment="Top" Width="195" />
                        <Button x:Name="addItemBtn" Content="Add" HorizontalAlignment="Left" Margin="199,215,0,0" VerticalAlignment="Top" Width="248" BorderBrush="{x:Null}" Background="#FFFF5A5F" Foreground="White" Click="AddItemBtn_Click" />
                        <Button x:Name="saveItemBtn" Content="Save" HorizontalAlignment="Left" Margin="199,215,0,0" VerticalAlignment="Top" Width="248" BorderBrush="{x:Null}" Background="#FFFF5A5F" Foreground="White" Click="SaveItemBtn_Click" Visibility="Hidden" />
                    </Grid>
                </TabItem>

                <TabItem Header="PropertyItem" Visibility="Visible">
                    <Grid Background="White">
                        <Label Content="Id: " HorizontalAlignment="Left" Margin="62,43,0,0" VerticalAlignment="Top" />
                        <TextBox x:Name="propertyIdTxt" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" Margin="93,43,0,0" BorderBrush="#FF554F4F" Background="White" BorderThickness="0,0,0,1" />
                        <Label Content="District: " HorizontalAlignment="Left" Margin="40,11,0,0" VerticalAlignment="Top" Width="53" />
                        <ComboBox x:Name="propertyDistrictCombo" HorizontalAlignment="Left" Margin="93,11,0,0" VerticalAlignment="Top" Width="195" SelectionChanged="PropertyDistrictCombo_SelectionChanged" />
                        <Button Content="Add" HorizontalAlignment="Left" Margin="199,255,0,0" VerticalAlignment="Top" Width="248" BorderBrush="{x:Null}" Background="#FFFF5A5F" Foreground="White" Click="PropertyAddButtonClick" />
                        <Label Content="Neighbourhood: " HorizontalAlignment="Left" Margin="310,10,0,0" VerticalAlignment="Top" Width="100" />
                        <ComboBox x:Name="propertyNeighbourhoodCombo" HorizontalAlignment="Left" Margin="415,11,0,0" VerticalAlignment="Top" Width="195" />
                        <Label Content="Name: " HorizontalAlignment="Left" Margin="40,71,0,0" VerticalAlignment="Top" />
                        <TextBox  x:Name="propertyNameTxt" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" Margin="93,71,0,0" BorderBrush="#FF554F4F" Background="White" BorderThickness="0,0,0,1" />
                        <Label Content="Host Id: " HorizontalAlignment="Left" Margin="346,46,0,0" VerticalAlignment="Top" />
                        <TextBox x:Name="hostIdTxt" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" Margin="415,46,0,0" BorderBrush="#FF554F4F" Background="White" BorderThickness="0,0,0,1" />
                        <Label Content="Host Name: " HorizontalAlignment="Left" Margin="324,72,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.628,0.556" />
                        <TextBox x:Name="hostNameTxt" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" Margin="415,72,0,0" BorderBrush="#FF554F4F" Background="White" BorderThickness="0,0,0,1" />
                        <Label Content="Host Properties #: " HorizontalAlignment="Left" Margin="292,102,0,0" VerticalAlignment="Top" />
                        <TextBox x:Name="numHostPropertiesTxt" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" Margin="415,102,0,0" BorderBrush="#FF554F4F" Background="White" BorderThickness="0,0,0,1" />
                        <Label Content="Latitude: " HorizontalAlignment="Left" Margin="32,99,0,0" VerticalAlignment="Top" />
                        <TextBox  x:Name="propertyLatitudeTxt" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" Margin="93,99,0,0" BorderBrush="#FF554F4F" Background="White" BorderThickness="0,0,0,1" />
                        <Label Content="Longitude: " HorizontalAlignment="Left" Margin="21,130,0,0" VerticalAlignment="Top" />
                        <TextBox x:Name="propertyLongitudeTxt" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="197" Margin="91,130,0,0" BorderBrush="#FF554F4F" Background="White" BorderThickness="0,0,0,1" />
                        <Label Content="Room Type: " HorizontalAlignment="Left" Margin="324,161,0,0" VerticalAlignment="Top" />
                        <TextBox x:Name="roomTypeTxt" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" Margin="415,161,0,0" BorderBrush="#FF554F4F" Background="White" BorderThickness="0,0,0,1" />
                        <Label Content="Price (£): " HorizontalAlignment="Left" Margin="32,161,0,0" VerticalAlignment="Top" />
                        <TextBox x:Name="propertyPriceTxt" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" Margin="93,161,0,0" BorderBrush="#FF554F4F" Background="White" BorderThickness="0,0,0,1" />
                        <Label Content="Min Nights: " HorizontalAlignment="Left" Margin="16,189,0,0" VerticalAlignment="Top" />
                        <TextBox x:Name="propertyMinNightsTxt" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="197" Margin="91,187,0,0" BorderBrush="#FF554F4F" Background="White" BorderThickness="0,0,0,1" />
                        <Label Content="Days Available: " HorizontalAlignment="Left" Margin="308,133,0,0" VerticalAlignment="Top" />
                        <TextBox x:Name="daysAvailableTxt" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" Margin="415,133,0,0" BorderBrush="#FF554F4F" Background="White" BorderThickness="0,0,0,1" />
                        <Button x:Name="propertySaveBtn" Content="Save" HorizontalAlignment="Left" Margin="199,255,0,0" VerticalAlignment="Top" Width="248" BorderBrush="{x:Null}" Background="#FFFF5A5F" Foreground="White" Click="SaveItemBtn_Click" Visibility="Hidden" />
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Page>